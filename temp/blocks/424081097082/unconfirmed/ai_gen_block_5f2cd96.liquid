{% doc %}
  @prompt
    social media link 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-social-links-{{ ai_gen_id }} {
    display: flex;
    justify-content: {{ block.settings.alignment }};
    align-items: center;
    gap: {{ block.settings.spacing }}px;
    padding: {{ block.settings.padding }}px;
    flex-wrap: wrap;
  }

  .ai-social-link-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .ai-social-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.hover_background_color }};
    transform: translateY(-2px);
  }

  .ai-social-link-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.icon_size }}px * 0.5);
    height: calc({{ block.settings.icon_size }}px * 0.5);
    fill: {{ block.settings.icon_color }};
    transition: fill 0.3s ease;
  }

  .ai-social-link-{{ ai_gen_id }}:hover svg {
    fill: {{ block.settings.hover_icon_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-social-links-{{ ai_gen_id }} {
      justify-content: {{ block.settings.mobile_alignment }};
    }
  }
{% endstyle %}

